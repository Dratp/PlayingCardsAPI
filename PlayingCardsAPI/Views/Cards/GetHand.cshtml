@model Deck
@{
    ViewData["Title"] = "GetHand";
}

<h1>GetHand</h1>

<div class="row">
    @for (int i = 0; i < Model.cards.Length; i++)
    {
        <div class="col-lg-2">
            <p>@Model.cards[i].value of @Model.cards[i].suit</p>
            <img src="@Model.cards[i].image" alt="@Model.cards[i].value" />
        </div>
    }
</div>


